<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        app:srcCompat="@drawable/image6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="399dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/didact_gothic"
        android:text="What is EcoStyle?"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textColor="#3F3F3F" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/didact_gothic"
        android:text="EcoStyle is a way of expressing yourself through fashion while still upholding sustainability and ethical practices."
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:fontFamily="@font/didact_gothic"
        android:text="How To Shop Sustainably"
        android:textSize="24sp"
        android:textColor="#3F3F3F" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="165dp"
        android:text="1"
        android:textSize="36sp"
        android:textColor="#3F3F3F" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="95dp"
        android:text="2"
        android:textSize="36sp"
        android:textColor="#3F3F3F" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="25dp"
        android:text="3"
        android:textSize="36sp"
        android:textColor="#3F3F3F" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="170dp"
        android:text="Shop consciously by purchasing from brands that use ethical practices and prioritize sustainability." />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="90dp"
        android:text="Visit local thrift stores to donate unwanted clothing and reduce further clothing waste by purchasing second hand clothes." />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:text="Avoid purchasing new clothes by repurposing old items in your closet to give them new life." />



</RelativeLayout>